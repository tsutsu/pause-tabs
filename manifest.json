{
  "manifest_version": 2,

  "name": "Pause Tabs",
  "description": "Pause your reading part-way through a page; then resume reading from the same position later.",
  "version": "1.0.1",

  "icons": {
    "128": "icon_128.png"
  },

  "permissions": [
    "bookmarks",
    "tabs",
    "*://*/*"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "page_action": {
    "default_icon": {
      "19": "action_pause.1x.png",
      "38": "action_pause.2x.png"
    },

    "default_title": "Pause tab"
  }
}